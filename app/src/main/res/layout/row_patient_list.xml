<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llPatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="45dp"
            app:cardBackgroundColor="#259b24"
            app:cardElevation="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivPatientProfile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:background="@color/white"
                android:src="@drawable/icf_circle_plus" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tvPatientProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Add New Patient"
            android:textColor="@color/gray_a"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAddNewPatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="45dp"
            app:cardElevation="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivAddPatient"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icf_circle_plus" />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Add New Patient"
            android:textColor="@color/gray_a"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>