<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llPatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="44dp"
                app:cardElevation="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivPatientProfile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icf_circle_plus" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvPatientProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="David Beckham"
                android:textColor="@color/gray_a"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAddNewPatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="44dp"
                app:cardElevation="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivAddPatient"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icf_circle_plus" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="Add New Patient"
                android:textColor="@color/gray_a"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>