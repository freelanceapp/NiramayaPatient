<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlHospitalList"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_search_hospital"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/iv_hospital_image"
                    android:layout_width="76dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/img_b" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="4dp">

                    <TextView
                        android:id="@+id/tv_hospital_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apollo DB Hospital"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_hospital_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Palasia Square near police station indore"
                        android:textSize="@dimen/size_12"
                        android:textStyle="normal" />

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="@color/green_dark"
                        app:cardCornerRadius="8dp">


                        <TextView
                            android:id="@+id/tv_hospital_rating"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/green_dark"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:text="3.5"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_14"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="2.3"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:paddingRight="6dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_send"
                    android:tint="@color/gray_d" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 km"
                    android:textAlignment="center"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>