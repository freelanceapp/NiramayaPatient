<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="@dimen/size_12"
                android:layout_marginRight="16sp"
                android:layout_marginBottom="@dimen/size_12"
                android:layout_weight="2"
                android:src="@drawable/ic_profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Vivek Thakur"
                    android:textColor="@color/red_a"
                    android:textSize="@dimen/size_16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peditrician"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_location"
                    android:drawableTint="@color/green_dark"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="Bombe Hospital, Vijay Nagar, Indore"
                    android:textSize="@dimen/size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="24sp"
                android:layout_marginRight="16sp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rb_review_number"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:isIndicator="true"
                    android:numStars="1"
                    android:progressTint="@color/green_dark"
                    android:rating="5"
                    android:stepSize="1.0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" 4.5"
                    android:textColor="@color/green_dark" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray_h" />
    </LinearLayout>
</RelativeLayout>